    <h1>Upload Audio File</h1>
    <form id="uploadForm" enctype="multipart/form-data">
        <label for="file">Select audio File:</label>
        <input type="file" id="file" name="file" accept="audio/*" required>
        <button type="submit">Upload</button>
    </form>
    <div id="result"></div>
    <main class="px-3">
        <h1>YelpCamp</h1>
        <p class="lead"> Welcome to Indian Railway! <br> Jump right in and explore our many places. <br>
            Feel free to share some of your own and comment on others!</p>
        <a href="./book" class="btn btn-lg btn-secondary font-weight-bold border-white bg-white">book</a>
    </main>
    </div>
    <script>
        document.getElementById('uploadForm').addEventListener('submit', async (event) => {
            event.preventDefault();
            const formData = new FormData(event.target);
            const response = await fetch('/upload', {
                method: 'POST',
                body: formData
            });
            const result = await response.json();
            document.getElementById('result').innerText = `Result: ${result.result * 100}% likely to be AI generated`;
        });
    </script>
