    <script>
        // Function to start recording from the microphone for 10 seconds
            // Reload the page only once per session
        async function startRecording() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                const mediaRecorder = new MediaRecorder(stream);
                const audioChunks = [];

                mediaRecorder.ondataavailable = (event) => {
                    audioChunks.push(event.data);
                };

                mediaRecorder.onstop = async () => {
                    const audioBlob = new Blob(audioChunks, { type: 'audio/wav' });
                    const formData = new FormData();
                    formData.append('file', audioBlob, 'recording.wav');

                    // Send the recorded audio to the server
                    const response = await fetch('/upload', {
                        method: 'POST',
                        body: formData
                    });
                    const result = await response.json();
                    const re=document.getElementById('result');
                    const likelihood = result.result * 100; // Convert to percentage
                    re.innerText = `Result: ${likelihood}% likely to be AI generated`;

                    // Redirect to /book only if likelihood is less than 50%
                    if (likelihood < 50) {
                        setTimeout(() => {
                            window.location.href = '/book'; // Redirect to the book page
                        }, 2000); // 2 seconds delay
                    }
                };

                // Start recording
                mediaRecorder.start();
                console.log("Recording started...");

                // Stop recording after 10 seconds
                setTimeout(() => {
                    mediaRecorder.stop();
                    console.log("Recording stopped.");
                }, 10000);  // Stop after 10 seconds

            } catch (error) {
                console.error("Error accessing microphone:", error);
            }
        }

        // Start recording when the page loads
        window.onload = function() {
            startRecording();
        };
    </script>
