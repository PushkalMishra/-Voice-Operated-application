<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheet/login.css">
<div class="cont">
    <div class="form sign-in">
      <h2>Welcome back!</h2>
      <form id="loginForm" action="/login" method="POST">
      <label for="username">
        <span>Username</span>
        <input id="username" class="form-control" name="username" type="text" required autofocus/>
      </label>
      <label for="password">
        <span>Password</span>
        <input id="password" class="form-control" name="password" type="text"/>
      </label>
      <p class="forgot-pass">Forgot password?</p>
      <button type="submit" class="submit">Sign In</button>
      <button type="submit" class="fb-btn">Connect with <span>Google</span></button>
      </form>
    </div>
    <div class="sub-cont">
      <div class="img">
        <div class="img__text m--up">
          <h2>New here?</h2>
          <p>Sign up and get started on your journey of hassel free parking!</p>
        </div>
        <div class="img__text m--in">
          <h2>One of us?</h2>
          <p>If you already have an account, just sign in. We've missed you!</p>
        </div>
        <div class="img__btn">
          <span class="m--up">Sign Up</span>
          <span class="m--in">Sign In</span>
        </div>
      </div>
      <div class="form sign-up">
        <h2>Time to feel like home!</h2>
        <form action="/register" method="POST" id="registerForm">
        <label class="form-label" for="newusername">
          <span>Name</span>
          <input id="newusername" class="form-control" name="newusername" type="text" required/>
        </label>
        <label class="form-label" for="email">
          <span>Email</span>
          <input id="email" class="form-control" type="email" name="email"/>
        </label>
        <label class="form-label" for="newpassword">
          <span>Password</span>
          <input id="newpassword" class="form-control" name="newpassword" type="text"/>
        </label>
        <button type="submit" class="submit">Sign Up</button>
        <button type="submit" class="fb-btn">Join with <span>Google</span></button>
        </form>
      </div>
    </div>
</div>

